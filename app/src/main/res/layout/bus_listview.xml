<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp">

    <RelativeLayout
        android:id="@+id/busNumberHolder"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="4dp"
        android:layout_marginStart="4dp"
        android:background="@drawable/background_square_yellow">

        <ImageView
            android:id="@+id/busImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/busNumberText"

            android:layout_centerHorizontal="true"
            android:layout_marginBottom="2dp"
            android:src="@drawable/ic_directions_bus_black_24dp"
            android:tint="#FFFFFF" />

        <TextView
            android:id="@+id/busNumberText"
            android:layout_width="56dp"
            android:layout_height="28dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:text="MINI BUS 124"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <TextView
        android:id="@+id/busSourceText"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_toEndOf="@+id/busNumberHolder"
        android:layout_toRightOf="@+id/busNumberHolder"
        android:layout_toStartOf="@+id/busACType"
        android:layout_toLeftOf="@+id/busACType"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical"
        android:textColor="@color/colorAccent_0.8"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/busDestinationText"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_toEndOf="@+id/busNumberHolder"
        android:layout_toRightOf="@+id/busNumberHolder"
        android:layout_toStartOf="@+id/busACType"
        android:layout_toLeftOf="@+id/busACType"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:layout_below="@+id/busSourceText"
        android:gravity="center_vertical"
        android:textColor="@color/colorAccent_0.6"
        android:textSize="12sp" />


    <RelativeLayout
        android:id="@+id/busACType"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/ac_background">

        <ImageView
            android:id="@+id/busACIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_ac_unit_white_24dp" />
    </RelativeLayout>

</RelativeLayout>