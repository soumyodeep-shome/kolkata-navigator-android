<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/busNumberListViewIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.4"
        android:src="@drawable/transport_number_listview_icon_1" />

    <TextView
        android:id="@+id/busNumberListViewText"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/busNumberListViewIcon"
        android:layout_toRightOf="@+id/busNumberListViewIcon"
        android:gravity="center_vertical"
        android:textColor="@color/colorAccent_0.8"
        android:textSize="16sp" />
</RelativeLayout>