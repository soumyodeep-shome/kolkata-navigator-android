<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.thebrokegamers.kolkatanavigator.EmergencyFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:id="@+id/emergencyTopContainer"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@color/colorPrimary">
        <HorizontalScrollView
            android:id="@+id/emergencyScrollView"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="@color/colorPrimary">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/emergencyPoliceContainer"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimary"
                    android:clickable="true">

                    <View
                        android:layout_width="1dp"
                        android:layout_height="32dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="#DDDDDD" />

                    <ImageView
                        android:id="@+id/emergencyPoliceIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="12dp"
                        android:src="@drawable/police_icon"

                        android:tint="#FFFFFF" />

                    <TextView
                        android:id="@+id/emergencyPoliceText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/emergencyPoliceIcon"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="6dp"
                        android:text="Police"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp" />
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/emergencyFireStationContainer"
                    android:layout_width="90dp"
                    android:layout_height="match_parent">

                    <View
                        android:layout_width="1dp"
                        android:layout_height="32dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="#DDDDDD" />

                    <ImageView
                        android:id="@+id/emergencyFireStationIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="12dp"
                        android:src="@drawable/firestation_icon"

                        android:tint="#FFFFFF" />

                    <TextView
                        android:id="@+id/emergencyFireStationText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/emergencyFireStationIcon"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="6dp"
                        android:text="Fire Station"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/emergencyHospitalContainer"
                    android:layout_width="90dp"
                    android:layout_height="match_parent">

                    <View
                        android:layout_width="1dp"
                        android:layout_height="32dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="#DDDDDD" />

                    <ImageView
                        android:id="@+id/emergencyHospitalIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="12dp"
                        android:src="@drawable/ic_local_hospital_black_24dp"

                        android:tint="#FFFFFF" />

                    <TextView
                        android:id="@+id/emergencyHospitalText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/emergencyHospitalIcon"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="6dp"
                        android:text="Hospital"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/emergencyWomenContainer"
                    android:layout_width="90dp"
                    android:layout_height="match_parent">

                    <View
                        android:layout_width="1dp"
                        android:layout_height="32dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="#DDDDDD" />

                    <ImageView
                        android:id="@+id/emergencyWomenIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="12dp"
                        android:src="@drawable/w_safety"
                        android:tint="#FFFFFF" />

                    <TextView
                        android:id="@+id/emergencyWomenText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/emergencyWomenIcon"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="6dp"
                        android:text="W Helpline"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/emergencyBloodContainer"
                    android:layout_width="90dp"
                    android:layout_height="match_parent">

                    <View
                        android:layout_width="1dp"
                        android:layout_height="32dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="#DDDDDD" />

                    <ImageView
                        android:id="@+id/emergencyBloodIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="12dp"
                        android:src="@drawable/blood_bank"
                        android:tint="#FFFFFF" />

                    <TextView
                        android:id="@+id/emergencyBloodText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/emergencyBloodIcon"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="6dp"
                        android:text="Blood Bank"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/emergencyTouristContainer"
                    android:layout_width="90dp"
                    android:layout_height="match_parent">

                    <View
                        android:layout_width="1dp"
                        android:layout_height="32dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="#DDDDDD" />

                    <ImageView
                        android:id="@+id/emergencyTouristIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="12dp"
                        android:src="@drawable/tourist_icon"
                        android:tint="#FFFFFF" />

                    <TextView
                        android:id="@+id/emergencyTouristText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/emergencyTouristIcon"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="6dp"
                        android:text="Tourist"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/emergencyMiscContainer"
                    android:layout_width="90dp"
                    android:layout_height="match_parent">

                    <View
                        android:layout_width="1dp"
                        android:layout_height="32dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="#DDDDDD" />

                    <ImageView
                        android:id="@+id/emergencyMiscIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="12dp"
                        android:src="@drawable/misc_icon"
                        android:tint="#FFFFFF" />

                    <TextView
                        android:id="@+id/emergencyMiscText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/emergencyMiscIcon"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="6dp"
                        android:text="Misc."
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        />
                </RelativeLayout>

            </LinearLayout>

        </HorizontalScrollView>

        <View
            android:layout_width="1dp"
            android:layout_height="64dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@color/colorPrimary" />


    </RelativeLayout>
    <ListView
        android:id="@+id/emergencyList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/emergencyTopContainer"
        android:background="#FFFFFF"/>

</RelativeLayout>