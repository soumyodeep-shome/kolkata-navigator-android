<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp">


    <RelativeLayout
        android:id="@+id/metroNumberHolder"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="4dp"
        android:layout_marginStart="4dp"
        android:background="@drawable/background_square_yellow">

        <ImageView
            android:id="@+id/metroImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/metroSourceTimeText"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="2dp"
            android:src="@drawable/ic_directions_subway_black_24dp"
            android:tint="#FFFFFF" />

        <TextView
            android:id="@+id/metroSourceTimeText"
            android:layout_width="56dp"
            android:layout_height="28dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:text="11:09"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/metroReachHolder"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="80dp"
        android:layout_marginLeft="64dp"
        android:layout_marginRight="80dp"
        android:layout_marginStart="64dp">

        <TextView
            android:id="@+id/metroReachText"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical"
            android:text="Reach"
            android:textColor="@color/colorAccent_0.8"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/metroReachTimeText"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@+id/metroReachText"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="11:50"
            android:textColor="@color/colorAccent_0.8"
            android:textSize="32sp" />
    </RelativeLayout>


    <View
        android:layout_width="1dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="80dp"
        android:layout_marginRight="80dp"
        android:background="@color/colorAccent_0.2" />

    <RelativeLayout
        android:layout_width="80dp"
        android:layout_height="64dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true">

        <TextView
            android:id="@+id/metroFareText"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:gravity="center"
            android:text="Fare"
            android:textColor="@color/colorAccent_0.6"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/metroFareValueText"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/metroFareText"
            android:gravity="center"
            android:text="Rs."
            android:textColor="@color/colorAccent_0.6"
            android:textSize="20dp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/metroListViewBackgroundTint"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="#000000" />

</RelativeLayout>